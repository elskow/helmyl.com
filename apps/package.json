{
	"name": "@helmyl/website",
	"version": "1.0.0",
	"description": "Personal website built with SvelteKit",
	"private": true,
	"scripts": {
		"generate:labs": "tsx scripts/generate-labs-metadata.ts",
		"generate:og": "tsx scripts/generate-og-images.ts",
		"postbuild": "pnpm generate:og && cp static/{_headers,_redirects,_routes.json} build/ && rm -rf build/og && cp -r static/og build/og && echo 'OG images generated:' && find build/og -name '*.png' -type f | wc -l",
		"predev": "pnpm generate:labs",
		"dev": "vite dev",
		"build": "pnpm generate:labs && mkdir -p static/labs && vite build",
		"preview": "vite preview",
		"clean": "rm -rf build .svelte-kit .content-collections",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --check . && eslint . --fix",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@content-collections/core": "^0.11.1",
		"@content-collections/markdown": "^0.1.4",
		"@content-collections/vite": "^0.2.7",
		"@expressive-code/plugin-collapsible-sections": "^0.41.3",
		"@iconify-json/bxl": "^1.2.2",
		"@iconify-json/devicon": "^1.2.45",
		"@iconify-json/skill-icons": "^1.2.0",
		"@iconify-json/vscode-icons": "^1.2.32",
		"@playwright/test": "^1.56.1",
		"@resvg/resvg-js": "^2.6.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.15",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.9.1",
		"@types/object-hash": "3.0.6",
		"@types/remark-oembed": "^1.2.4",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.2.6",
		"reading-time": "1.5.0",
		"rehype-expressive-code": "^0.41.3",
		"rehype-external-links": "3.0.0",
		"rehype-katex": "7.0.1",
		"rehype-mermaid": "3.0.0",
		"rehype-preset-minify": "^7.0.1",
		"rehype-unwrap-images": "^1.0.0",
		"remark-gfm": "^4.0.1",
		"remark-oembed": "^1.2.2",
		"satori": "^0.18.3",
		"sharp": "^0.34.4",
		"super-sitemap": "^1.0.5",
		"svelte": "^5.41.1",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.15",
		"terser": "^5.44.0",
		"tsx": "^4.20.3",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.46.2",
		"unist-util-visit": "^5.0.0",
		"unplugin-icons": "^22.5.0",
		"unplugin-tailwindcss-mangle": "^4.1.2",
		"vite": "^7.0.9",
		"vite-plugin-webfont-dl": "^3.11.1",
		"zod": "^4.1.12"
	},
	"type": "module",
	"dependencies": {
		"@expressive-code/plugin-frames": "^0.41.3",
		"@fontsource-variable/onest": "^5.2.11",
		"@lucide/svelte": "^0.546.0",
		"feed": "^5.1.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"unified": "^11.0.5"
	}
}
