# Global headers for all routes
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

  # CORS Headers
  Access-Control-Allow-Origin: *
  Cross-Origin-Resource-Policy: cross-origin
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: *
  Access-Control-Expose-Headers: *
  Timing-Allow-Origin: *

  # Caching - Default for HTML pages
  Cache-Control: public, max-age=0, must-revalidate

# HTML pages - No caching for dynamic content
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Static assets - Aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/chunks/*
  Cache-Control: public, max-age=31536000, immutable

/entries/*
  Cache-Control: public, max-age=31536000, immutable

# Images - Long-term caching
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Favicons - Long-term caching
/favicons/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - Long-term caching
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# RSS Feed - Short caching
/rss.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/rss+xml; charset=utf-8

# Sitemap - Short caching
/sitemap.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml; charset=utf-8

# Robots.txt - Moderate caching
/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8

# Labs - Long-term caching for static lab content
/labs/*
  Access-Control-Allow-Origin: *
  Cross-Origin-Resource-Policy: cross-origin
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: *
  Access-Control-Expose-Headers: *
  Timing-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable
