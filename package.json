{
	"name": "helmyl.com",
	"version": "1.0.0",
	"description": "Personal website and labs monorepo",
	"private": true,
	"scripts": {
		"dev": "nx run website:dev",
		"build": "nx run website:build",
		"preview": "nx run website:preview",
		"clean": "nx run-many -t clean",
		"clean:all": "pnpm clean && rm -rf node_modules apps/node_modules packages/*/node_modules .nx",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "nx run website:lint",
		"check": "nx run website:check",
		"test": "echo \"No tests specified\" && exit 0",
		"postinstall": "echo 'Dependencies installed'"
	},
	"devDependencies": {
		"@nx/js": "^22.0.1",
		"@nx/vite": "^22.0.1",
		"@parcel/transformer-glsl": "^2.16.0",
		"@parcel/transformer-sass": "^2.16.0",
		"nx": "^22.0.1",
		"prettier": "^3.6.2",
		"tsx": "^4.20.3",
		"wrangler": "^4.44.0"
	},
	"engines": {
		"node": ">=20.18.0",
		"pnpm": ">=10.0.0"
	},
	"workspaces": [
		"apps",
		"packages/*"
	]
}
