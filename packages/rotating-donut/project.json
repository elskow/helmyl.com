{
	"name": "rotating-donut",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/rotating-donut/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{workspaceRoot}/apps/static/labs/rotating-donut"],
			"options": {
				"commands": [
					"mkdir -p ../../apps/static/labs/rotating-donut",
					"parcel build src/index.html --dist-dir ../../apps/static/labs/rotating-donut --public-url /labs/rotating-donut/ --no-cache"
				],
				"cwd": "packages/rotating-donut",
				"parallel": false
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"command": "parcel src/index.html --port 3001",
				"cwd": "packages/rotating-donut"
			}
		},
		"clean": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["rm -rf dist .parcel-cache", "rm -rf ../../apps/static/labs/rotating-donut"],
				"cwd": "packages/rotating-donut",
				"parallel": false
			}
		}
	},
	"tags": ["type:lab"]
}
