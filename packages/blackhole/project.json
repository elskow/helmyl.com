{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "blackhole",
  "sourceRoot": "packages/blackhole/src",
  "projectType": "library",
  "tags": ["type:lab"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "parcel build src/index.html --dist-dir ../../apps/static/labs/blackhole --public-url /labs/blackhole/ --no-cache",
        "cwd": "packages/blackhole"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "parcel src/index.html --port 3003",
        "cwd": "packages/blackhole"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rm -rf dist", "rm -rf ../../apps/static/labs/blackhole"],
        "cwd": "packages/blackhole",
        "parallel": false
      }
    }
  }
}
