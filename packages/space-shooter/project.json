{
	"name": "space-shooter",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/space-shooter/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{workspaceRoot}/apps/static/labs/space-shooter"],
			"options": {
				"commands": [
					"mkdir -p ../../apps/static/labs/space-shooter",
					"parcel build src/index.html --dist-dir ../../apps/static/labs/space-shooter --public-url /labs/space-shooter/ --no-cache --no-content-hash --no-source-maps",
					"cp -r public/* ../../apps/static/labs/space-shooter/"
				],
				"cwd": "packages/space-shooter",
				"parallel": false
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"command": "parcel src/index.html --port 3002",
				"cwd": "packages/space-shooter"
			}
		},
		"clean": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["rm -rf dist .parcel-cache", "rm -rf ../../apps/static/labs/space-shooter"],
				"cwd": "packages/space-shooter",
				"parallel": false
			}
		}
	},
	"tags": ["type:lab"]
}
